<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <in.myinnos.awesomeimagepicker.views.CustomToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffff"
        app:tabTextAppearance="@style/CustomTabText"
        app:tabBackground="@color/transparent"
        app:tabIndicatorColor="@color/greenfly_green"
        app:tabTextColor="@color/black"
        app:tabSelectedTextColor="@color/greenfly_green"
        app:tabIndicatorHeight="5dp"
        app:tabMode="fixed" />

    <TextView
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tabLayout"
        android:paddingTop="130dp"
        android:layout_centerHorizontal="true"
        android:text="@string/activity_media_empty"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/error_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/error_null_cursor" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_below="@id/tabLayout"
        android:layout_above="@id/selected_count"
        android:padding="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/selected_count"
        android:background="#e3e3e3"
        android:textColor="#000000"
        android:fontFamily="sans-serif-medium"
        android:textSize="18sp"
        android:gravity="center"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- When long pressing, this is the image/video previewer -->
    <RelativeLayout
        android:id="@+id/preview_holder"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000">

        <!-- FrameLayout is used to make a rounded edge clip around the video -->
        <FrameLayout
            android:id="@+id/preview_rounded_clip"
            android:layout_margin="30dp"
            android:layout_centerInParent="true"
            android:background="@drawable/rounded_video"
            android:outlineProvider="background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <VideoView
                android:id="@+id/video_view"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/image_view"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </FrameLayout>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/loader"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>