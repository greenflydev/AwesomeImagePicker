<?xml version="1.0" encoding="utf-8"?>
<in.myinnos.awesomeimagepicker.views.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundGravity="center"
    android:paddingBottom="1dp"
    android:paddingStart="1dp"
    android:paddingEnd="1dp"
    android:paddingTop="1dp">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/icon_play_view"
        android:visibility="gone"
        android:layout_gravity="center"
        android:background="@drawable/ic_aip_play"
        android:layout_width="25dp"
        android:layout_height="25dp"/>

    <RelativeLayout
        android:id="@+id/bottom_gradient"
        android:visibility="gone"
        android:background="@drawable/aip_black_gradient"
        android:padding="8dp"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/favorite"
            android:visibility="gone"
            android:background="@drawable/favorite"
            android:layout_width="22dp"
            android:layout_height="22dp" />

        <TextView
            android:id="@+id/video_duration"
            android:visibility="gone"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/previously_selected"
        android:visibility="gone"
        android:background="@drawable/cloud_upload"
        android:layout_margin="6dp"
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <View
        android:id="@+id/view_alpha"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/multiple_image_select_imageSelectBackground" />

    <ImageView
        android:id="@+id/selected"
        android:visibility="gone"
        android:layout_gravity="bottom|end"
        android:background="@drawable/blue_check"
        android:layout_margin="6dp"
        android:layout_width="25dp"
        android:layout_height="25dp" />

</in.myinnos.awesomeimagepicker.views.SquareFrameLayout>